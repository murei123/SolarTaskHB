@model Solsr.domains.Entities.Person

@{
    ViewData["Title"] = "Create";
}

<h1>Добавление новой записи</h1>


<div class="row">
    <div class="form_group">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label > Имя: </label>
                <input class="input_text" placeholder="Введите имя..." asp-for="Name" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Фамилия: </label>
                <input asp-for="LastName" class="input_text" placeholder="Введите фамилию..." />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Отчество:</label>
                <input asp-for="FatherName" class="input_text" placeholder="Введите отчество..." />
                <span asp-validation-for="FatherName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Дата рождения:</label>
                <input asp-for="BirthDate" class="input_text"/>
                <span asp-validation-for="BirthDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label >Изображение: </label>
                <input asp-for="Picture" type="file" />
                <span asp-validation-for="Picture" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Создать" class="form_group_btn" />
                
                    <a asp-action="Index" class="create-header_link">На главную</a>
               
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
