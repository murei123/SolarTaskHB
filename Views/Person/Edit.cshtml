@model Solsr.domains.Entities.Person

@{
    ViewData["Title"] = "Edit";
}

<h1>Редактировать запись</h1>

<h4>Person</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label> Имя: </label>
                <input asp-for="Name" class="input_text" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Фамилия: </label>
                <input asp-for="LastName" class="input_text" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Отчество:</label>
                <input asp-for="FatherName" class="input_text" />
                <span asp-validation-for="FatherName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Дата рождения:</label>
                <input asp-for="BirthDate" class="input_text" />
                <span asp-validation-for="BirthDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Дата рождения:</label>
                <input asp-for="Picture" type="file" class="input_text" />
                <span asp-validation-for="Picture" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Изменить" class="form_group_btn" />
           

                <a asp-action="Index" class="create-header_link">На главную</a>

            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
