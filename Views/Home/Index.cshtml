@model IEnumerable<Solsr.domains.Entities.Person>
@{
    ViewData["Title"] = "Главная страница";
}

<h1 class="idea"> Список ближайших дней рождений</h1>
 @foreach (var item in Model)
        {
<table class="table">
    <thead>
        <tr>
            <th>
                Фото
            </th>
            <th>
               Имя
            </th>
            <th>
                Фамилия
            </th>
            <th>
                Отчество
            </th>
            <th>
                День Рождения
            </th>
                   
           
        </tr>
    </thead>
    <tbody>
       
            <tr>
                <td>
                    <img class="logo" src="data:image;base64, @(item.Picture != null ? Convert.ToBase64String(item.Picture) : "~/css/some.jpg")">
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FatherName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BirthDate)
                </td>
               
              
            </tr>
       
    </tbody>
</table>
    <h1 class="line"> </h1>
}

<div class="btn">

    <a asp-area="" asp-controller="Person" asp-action="Index" class="wave-btn">
        <span class="wave-btn_text">Весь список</span>
        <span class="wave-btn_waves"></span>
    </a>
</div>